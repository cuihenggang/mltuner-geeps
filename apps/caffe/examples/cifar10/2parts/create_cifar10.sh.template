#!/usr/bin/env sh
# This script converts the cifar data into leveldb format.

OUTPUT=examples/cifar10/2parts
DATA=data/cifar10
DBTYPE=lmdb

echo "Creating $DBTYPE..."

rm -r examples/cifar10/2parts/cifar10_train_lmdb.%
rm -r examples/cifar10/2parts/cifar10_test_lmdb.%
./build/examples/cifar10/convert_partitioned_cifar_data.bin $DATA $OUTPUT $DBTYPE 2 %

echo "Computing image mean..."

./build/tools/compute_image_mean -backend=$DBTYPE $OUTPUT/cifar10_train_$DBTYPE.% $OUTPUT/mean.binaryproto.%

echo "Done."
